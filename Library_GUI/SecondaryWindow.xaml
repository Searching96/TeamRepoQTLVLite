<Window x:Class="Library_GUI.SecondaryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Library_GUI"
        mc:Ignorable="d"
        Title="SecondaryWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <Grid>
        <ContentControl 
                x:Name="DisplayContent" 
                Content="{Binding CurrentContent, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
